{
    "name": "npm-dependency-visualizer",
    "version": "1.0.0",
    "private": true,
    "homepage": "https://ctcuff.github.io/dependency-visualizer",
    "scripts": {
        "dev": "react-scripts start",
        "build": "react-scripts build",
        "lint": "yarn lint:js && yarn lint:scss",
        "lint:js": "eslint './src/**/*.js'",
        "lint:scss": "stylelint './src/**/*.scss'",
        "format": "prettier --write './src/**/*{.js,.scss}'",
        "format:js": "prettier --write './src/**/*.js'",
        "format:scss": "prettier --write './src/**/*.scss'"
    },
    "dependencies": {
        "@ant-design/icons": "^4.1.0",
        "antd": "^4.2.3",
        "dagre": "^0.8.5",
        "deep-equal": "^2.0.3",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "react-scripts": "3.4.1",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "redux-watch": "^1.1.1",
        "semver": "^7.3.2",
        "vis-data": "^6.5.2",
        "vis-network": "^7.6.4"
    },
    "devDependencies": {
        "gh-pages": "^2.2.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.4",
        "node-sass": "^4.14.1",
        "prettier": "^2.0.5",
        "stylelint": "^13.5.0",
        "stylelint-config-standard": "^20.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.scss": [
            "stylelint"
        ],
        "./src/**/*.js": [
            "prettier --write",
            "yarn lint"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
