{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "unit-blacklist": [
            "px",
            {
                "ignoreProperties": {
                    "px": ["/^border/", "/^transform/", "/box-shadow/"]
                }
            }
        ]
    },
    "ignoreFiles": ["./src/**/*.js"]
}
