{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "sourceMap": true,
        "jsx": "preserve",
        "noEmit": true,
        "baseUrl": "src",
        "esModuleInterop": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
